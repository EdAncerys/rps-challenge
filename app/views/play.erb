<h1>Let Play some awesome RPS <%= @name %></h1>

<h3>Pick one of the following</h3>

<div>
  <form class="form" action="/game" method="post">
    <input type="submit" value="Rock" name="rps">
  </form>

  <form class="form" action="/game" method="post">
    <input type="submit" value="Papper" name="rps">
  </form>

  <form class="form" action="/game" method="post">
    <input type="submit" value="Scissors" name="rps">
  </form>
</div>

<% if @data.rounds >= 1 %>
  <h3><%= @name %> picked <%= @game.player_pick %></h3></br>
  <h3>Computer picked <%= @game.pc %></h3></br>
  <%= @game.spin %></br>
  Rounds <%= @data.rounds %></br>
  Games <%= @data.results %></br>
  Player wins <%= @data.player_wins.sum %></br>
  Computer wins <%= @data.computer_wins.sum %></br>
  tie games <%= @data.tie_games.sum %></br>
<% end%>


